<h1>Listing Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= for post <- @posts do %>
        <tr>
          <th scope="row"><%= post.id %></th>
          <td><%= post.title %></td>
          <td><%= truncate post.body %></td>

          <td>
            <span><%= link "Show", to: Routes.post_path(@conn, :show, post) %></span>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>
